#!/bin/bash

VERBOSE=0
if [[ "$1" == "-v" ]]; then
	VERBOSE=1
fi

_sum=0

for MACHINE_PATH  in /srv/kvm/vms/*; do
{
	HOST="-unknown-"
	{
		vm=$(basename $MACHINE_PATH)
		if [ -f $MACHINE_PATH/config ]; then
			source $MACHINE_PATH/config 
			source $MACHINE_PATH/../../seats/seat-$vm 
			if [[ "$HOST" == $(hostname) ]]; then
				echo -e "$vm" 
			fi
		fi
	}
}
done


#!/bin/bash
set -o pipefail 

MACHINE="$1" 
TAGS="$2"

function usage() {
	echo "Usage: "
	echo "restore-machine MACHINE [TAG1 TAG2 ... TAGn]"
}

[[ -z $MACHINE ]] && usage && exit 2

echo "Restoring FS"
restore-fs $MACHINE /srv/kvm/vms/$MACHINE type:fs
restore-fs $MACHINE /srv/kvm/seats/seat-$MACHINE type:fs

echo "Restoring DISKS"
for disk  in system; do 
	restore-blockdev $MACHONE $disk 
done

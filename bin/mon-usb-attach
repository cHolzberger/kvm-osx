#!/bin/bash
sleep 5
# openbsd-nc is important! 
SCRIPT_DIR=$(dirname $(readlink -f $0))
source $SCRIPT_DIR/config-common
source $SCRIPT_DIR/config-machine

if [ "x$MACHINE" == "x" ]; then
	echo "Usage:"
	echo "$0 [machine-name]"
	exit 3
fi

if [ ! -d "$MACHINE_PATH" ]; then
	echo "Machine $MACHINE does not exists"
	echo "Reason: $MACHINE_PATH does not exist"
	exit 1
fi

SOCKET=$MACHINE_PATH/var/control

VENDOR_ID=$2
PRODUCT_ID=$3
HOST_BUS=$4
HOST_ADDR=$5
source $MACHINE_PATH/config
mon-send "$MACHINE" 'device_add usb-host,hostbus='$HOST_BUS',hostaddr='$HOST_ADDR',vendorid=0x'$VENDOR_ID',productid=0x'$PRODUCT_ID
